programa TeoriaEjercicioAvenidaFlores
procesos
  proceso Avenida(E Av: numero ; E cantFlores: numero)
  variables
    flores: numero
  comenzar
    Pos(Av, 1)
    flores := cantFlores
    mientras(flores > 0) & (PosCa < 100)
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores := flores - 1
      mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    Av, flores: numero
  comenzar
    Av := 1
    repetir 50
      Random(flores, 1, 150)
      Avenida(Av, flores)
      Av := Av + 2
      
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin