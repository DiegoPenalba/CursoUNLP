{Imagen}

programa Ejercicio2aPractica6
procesos
  proceso Cuadrado(E lado: numero)
  comenzar
    repetir 4
      repetir lado
        mover
      derecha
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    longitud: numero
  comenzar
    longitud := 1
    repetir 4
      Pos(2, 1)
      Cuadrado(longitud)
      longitud := longitud + 1
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin