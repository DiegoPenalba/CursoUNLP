programa EjemploTorreDeRectangulos
procesos
  proceso Rectangulo(E altura: numero ; E base: numero)
  comenzar
    repetir 2
      repetir altura
        mover
      derecha
      repetir base
        mover
      derecha
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  variables
    altura: numero
    base: numero
  comenzar
    altura := 5
    base := 19
    repetir 5
      Rectangulo(altura , base)
      Pos(PosAv + 2, PosCa + altura)
      altura := altura - 1
      base := base - 4
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin