{El robot debe limpiar de papeles la calle 34. Al terminar el recorrido debe informar cuantas esquinas ten√≠an originalmente exactamente 6 papeles.}

programa Ejercicio7Practica3 
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    papelesEsquina : numero
    esquina6papeles : numero
  comenzar
    esquina6papeles := 0
    Pos(1,34)
    derecha
    repetir 99
      papelesEsquina := 0
      mientras HayPapelEnLaEsquina
        tomarPapel
        papelesEsquina := papelesEsquina + 1
      si (papelesEsquina = 6)
        esquina6papeles := esquina6papeles + 1
      mover
    papelesEsquina := 0
    mientras HayPapelEnLaEsquina
      tomarPapel
      papelesEsquina := papelesEsquina + 1
    si (papelesEsquina = 6)
      esquina6papeles := esquina6papeles + 1
    Informar(esquina6papeles)
  fin
variables
  Rinfo: robot1
comenzar
  AsignarArea(Rinfo,ciudad)
  Iniciar(Rinfo,1,1)
fin