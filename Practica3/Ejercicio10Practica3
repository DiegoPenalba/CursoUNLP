{Programe al robot para que recorra el per√≠metro de la ciudad e informe la cantidad de papeles recogidos en cada lado}

programa Ejercicio10Practica3 
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    papelesRecogidos : numero
  comenzar
    papelesRecogidos := 0
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      papelesRecogidos := papelesRecogidos + 1
    repetir 4
      repetir 99
        mover
        mientras (HayPapelEnLaEsquina)
          tomarPapel
          papelesRecogidos := papelesRecogidos + 1
      derecha
  fin
variables
  Rinfo: robot1
comenzar
  AsignarArea(Rinfo,ciudad)
  Iniciar(Rinfo,1,1)
fin